<%# Templates that are ment to be rendered as templates, and not pages themselves, should be prefixed with "_"%>
<%= form_for @question do |form| %>
    <% if @question.errors.present? %>
        <p>
            <%= @question.errors.full_messages.join(', ') %>
        </p>
    <% end %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>
    <div>
        <%= form.label :tag_ids %>
        <%= form.collection_select :tag_ids, Tag.order(:name), :id, :name,
                                        {},
                                        { multiple: true, class: 'chosen-select' } %>
    </div>

        <%= form.submit %>
<% end %>
