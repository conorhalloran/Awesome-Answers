<%# Templates that are ment to be rendered as templates, and not pages themselves, should be prefixed with "_"%>
<%= simple_form_for @question do |form| %>
    <%= form.input :title %>
    <%= form.input :body %>
    <%= form.association :tags, input_html: { class: 'chosen-select' } %>
    <%= form.input :image %>
    <%= form.submit class: 'btn btn-primary' %>
<% end %>
