<h1>Hey Admin,</h1>
<h2>Welcome to the Admin Dashboard</h2>
<hr>
<p>Question Count: <%= @stats[:question_count] %></p>
<p>Answer Count: <%= @stats[:answer_count] %></p>
<p>User Count: <%= @stats[:user_count] %></p>
<hr>
<table class="table">
    <tbody>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Created At</th>
            <th>Is Admin</th>
        </tr>

        <% @user.each do |user| %>
            <tr>
                <td><%= user.id %></th>
                <td><%= user.first_name %></th>
                <td><%= user.last_name %></th>
                <td><%= user.email %></th>
                <td><%= user.created_at %></th>
                <td><%= user.is_admin? %></th>
            </tr>
        <% end %>
    </tbody>
</table>
