<!DOCTYPE html>
<html>
  <head>
    <title>AwesomeAnswers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- <a href="/">Home</a>

    <a href="/hello">About Us</a> -->
    <%= link_to "Home", root_path %> |
    <!-- This ðŸ‘† generates: <a href="/">Home</a> -->
    <%= link_to "New Question", new_question_path %> |
    <%= link_to "Questions", questions_path %> |
    <%= link_to "About", hello_path %> |
    <%= link_to "Subscribe", subscribe_path %> |
    <% if user_signed_in? %>
      <span>Hello, <%= current_user.first_name %> <%= current_user.last_name %></span>
      <% if current_user.is_admin? %>
        <%= link_to  "Dashboard", admin_dashboard_index_path %> |
        <% end %>
      <%= link_to 'Sign Out', session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign-up", new_user_path %>
      |
      <%= link_to "Sign-in", new_session_path %>
    <% end %>

    <hr>
    <!-- to display messages from the global flash object, we must write the code in our views to be able to do so. Here we display the flash[:notice] message if it exists. -->
    <main class="container-fluid">
      <% if flash[:notice].present? %>
      <div class="alert alert-success alert-dismissable fade-show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= flash[:notice] %>
      </div>
      <% end %>
    
        <% if flash[:alert].present? %>
          <div class="alert alert-danger alert-dismissable fade-show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:alert] %>
          </div>
        <% end %>

    
      <%= yield %>
    </main>
    
  </body>
</html>
