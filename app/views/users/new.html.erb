<h1>Sign Up</h1>

<%= simple_form_for @user do |f| %>
    <% if @user.errors.present? %>
        <p><%= @user.errors.full_messages.join(', ') %></p>
    <% end %>
  <div>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <h2>Address Info</h2>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :postal_code %>
    <%= f.input :province %>
    <%= f.input :country %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>